{% extends "admin-layout.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/admin/styles/show.css">
{% endblock %}

{% block head %}
    <title>Detalhes da Receita</title>
{% endblock %}

{% block content %}

<div class="introRecipes">
    <h1>Receitas: {{ recipe.title }}</h1>
    <a href="#">Editar receita</a>
</div>

<div class="sliderRecipes">
    <img src="{{ recipe.image }}" alt="">
</div>


<div class="descriptionRecipes">
    <h2>{{ recipe.title }}</h2>
    <p>por {{ recipe.author }}</p>
</div>

<div class="contentRecipes">
    <div class="ingredientsRecipes">
        <h3>Ingredientes</h3>
    </div>

    <div class="detailsIngredients">
        <ul class="detailsIngredientsList" style="display: block;">
            {% for ingredients in recipe.ingredients %}
                <li>{{ ingredients }}</li>
            {% endfor %}
        </ul>
    </div>

    <div class="preparationRecipes">
        <h3>Modo de preparo</h3>
    </div>

    <div class="preparationIngredients">
        <ul class="prepationIngredientsList" style="display: block;">
            {% for preparation in recipe.preparation %}
                <li>{{ preparation }}</li>
            {% endfor%}
        </ul>
    </div>

    <div class="informationRecipes">
        <h3>Informações adicionais</h3>
    </div>

    <div class="informationIngredients">
        <span>{{ recipe.information }}</span>
    </div>

</div>


{% endblock %}
{% extends "admin-layout.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/admin/styles/edit.css">
{% endblock %}

{% block head %}
    <title>Editando receita</title>
{% endblock %}

{% block content %}

    <div class="introEdit">
        <div class="introEditText">
            <h1>Editando receita</h1>
        </div>
        <div class="introEditButton">
            <a href="#">Deletar</a>
            <a href="#">Salvar receita</a>
        </div>
    </div>

    <div class="imgEdit">
        <h2>Imagem da receita</h2>
        <input type="text" placeholder="https://images.unsplash.com/photo-1513104890138-7c749659a591" name="imagem_url">
    </div>

    <div class="ingredientsEdit">
        <h2>Ingredientes</h2>
        <input type="text" placeholder="3kg de carne moída (escolha uma carne magra e macia);" name="ingredients">
        <input type="text" placeholder="300g de bacon moído;" name="ingredients">
        <a href="#">Adicionar novo  ingrediente</a>
    </div>

    <div class="preparationEdit">
        <h2>Modo de preparo</h2>
        <input type="text" placeholder="Misture a carne com temperos de sua escolha" name="preparation">
        <input type="text" placeholder="Coloque a carne na churrasqueira por 2 minutos cada lado" name="preparation">
        <a href="#">Adicionar novo  ingrediente</a>
    </div>

    <div class="informationEdit">
        <h2>Informações adicionais</h2>
        <textarea placeholder="Preaqueça a chapa, frigideira ou grelha por 10 minutos antes de levar os hambúrgueres. Adicione um pouquinho de óleo ou 
manteiga e não amasse os hambúrgueres!" cols="30" rows="10" name="information"></textarea>
    </div>

{% endblock %}
{% extends "admin-layout.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/admin/styles/create.css">
{% endblock %}

{% block head %}
    <title>Editando receita</title>
{% endblock %}

{% block content %}

<form action="/admin/recipes" method="POST" class="form">

    <div class="introEdit">
        <div class="introEditText">
            <h1>Criando receita</h1>
        </div>
        <div class="introEditButton">
            <button type="submit">Salvar receitas</button>
        </div>
    </div>

    <div class="imgEdit">
        <h2>Imagem da receita</h2>
        <input type="url" placeholder="http://" name="image">
    </div>

    <div class="titleEdit">
        <h2>Nome da receita</h2>
        <input type="text" placeholder="Churrasco Grego" name="title">
    </div>

    <div class="authorEdit">
        <h2>Criador da receita</h2>
        <input type="text" placeholder="Mestre Shiba" name="author">
    </div>

    <div class="ingredientsEdit">
        <h2>Ingredientes</h2>
        <input type="text" class="inputIngredients" placeholder="12 Colheres de Chá de Açúcar" name="ingredients[]">
        {# <a href="#" onclick="addIngredients()">Adicionar novo  ingrediente</a> #}
        <button type="button" id="addIngredients">Adicionar novo ingrediente</button>
    </div>

    <div class="preparationEdit">
        <h2>Modo de preparo</h2>
        <input type="text" placeholder="Misturar primeiro o Ovo com a Manteiga" name="preparation">
        <a href="#">Adicionar novo  ingrediente</a>
    </div>

    <div class="informationEdit">
        <h2>Informações adicionais</h2>
        <textarea placeholder="Preaqueça a chapa, frigideira ou grelha por 10 minutos antes de levar os hambúrgueres. Adicione um pouquinho de óleo ou 
manteiga e não amasse os hambúrgueres!" cols="30" rows="10" name="information"></textarea>
    </div>

</form>

{% endblock %}


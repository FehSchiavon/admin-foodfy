{% extends "admin-layout.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/admin/styles/index.css">
{% endblock %}

{% block head %}
    <title>Listagem das Receitas</title>
{% endblock %}

{% block content %}
    <div class="introIndex">
        <div class="introIndexText">
            <h1>Gerenciar receitas</h1>
        </div>
        <div class="introEditButton">
            <a href="/admin/recipes/create">Nova receita</a>
        </div>
    </div>

    <div class="listRecipes">
        {% for recipe in recipes %}
        <div class="typeRecipes" id="">
            <img src="{{recipe.image}}" alt="{{recipe.title}}">
            <div class="readRecipes">
                <h3 class="whatRecipes">{{ recipe.title }}</h3>
                <p class="whatNameCreator">{{ recipe.author }}</p>
                <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
            </div>
        </div>
        {% endfor %}
    </div>

{% endblock %}